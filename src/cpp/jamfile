lib cobalt : : <name>boost_cobalt ;

project
	: requirements
		<library>cobalt
	: default-build
		<cxxstd>23
;

progs =
	cobalt_hello
	cobalt_race
	cobalt_awaitable
	dp_adapter_pattern
	dp_bridge_pattern
	dp_proxy_pattern
	dp_strategy_pattern
	sig2_missile_reviewer
;

for prog in $(progs)
{
	exe $(prog) : $(prog).cpp ;
}

